<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarritoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="30dp">

        <TextView
            android:id="@+id/txtCarrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:text="Lista de productos en el carrito"
            android:textAlignment="center"
            android:textSize="22sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="401dp"
        tools:layout_editor_absoluteY="287dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <ListView
                android:id="@+id/lvCarrito"
                android:layout_width="match_parent"
                android:layout_height="480dp" >

            </ListView>

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="44dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnFactura"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginBottom="32dp"
                android:text="Comprar" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Si desea eliminar un producto, mantenga presionado sobre el producto a eliminar"
                android:textAlignment="center" />
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>